<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:theme="@style/AppMediaTheme"
    tools:context=".features.media.preview.PreviewMediaListActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextAppearance="@style/Toolbar.TitleText" />

    <!--android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"-->

    <fragment
        android:id="@+id/fragUploadManager"
        class="net.opendasharchive.openarchive.features.media.MediaReviewListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>

